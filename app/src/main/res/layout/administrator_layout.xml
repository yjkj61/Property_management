<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.yjkj.property_management.ui.page.homePageFragment.firstHomePage.FirstHomePageViewModel" />
        <variable
            name="click"
            type="com.yjkj.property_management.ui.page.homePageFragment.firstHomePage.FirstHomePageFragment.Click" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/administrator_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/household_analysis_layout"
        android:background="@color/transparent"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">
        <!--     头像   -->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"/>

        </androidx.cardview.widget.CardView>
        <!--   用户名     -->
        <TextView
            android:text="管理员"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:textSize="24dp"
            android:layout_marginStart="20dp"/>
        <!--   切换用户     -->
        <ImageButton
            android:onClick="@{()->click.switchUser()}"
            android:background="@drawable/administrator_btn_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"/>
        <!--   物业-校区名称     -->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:background="@drawable/property_management_shape"
            android:textColor="@color/color_4580FF"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:textSize="14dp"
            android:text="嘉辰物业·白马小区"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>